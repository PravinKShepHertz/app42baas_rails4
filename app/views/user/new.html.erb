<h3>Enter User Details</h3>
<%= form_tag(user_create_path, :method => "get") do %>
  <div class="field_box">
	<%= label_tag(:user_name, "User name:") %></span>			
	<%= text_field_tag :user_name %></span>
  </div>
  <div class="field_box">
	<%= label_tag(:email, "Email:") %></span>			
	<%= text_field_tag :email %></span>
  </div>	
  <div class="field_box">
	<%= label_tag(:password, "Password:") %></span>			
	<%= password_field_tag :password %></span>
  </div>	
  <div class="field_box_center">
	<%= submit_tag "submit" %>
  </div>
<% end %>